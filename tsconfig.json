{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "build",
    "module": "esnext",
    "target": "ES6",
    "declaration": true,
    "jsx": "react",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "baseUrl": "src",
    "typeRoots": ["./node_modules/@types", "./src"],
    "paths": {
      "@/*": ["./*"]
//      "@/component/*": ["component/*"],
//      "@/server/*": ["server/*"],
//      "@/page/*": ["page/*"],
//      "@/utils/*": ["utils/*"]
    }
  },
  "ts-node": {
    "esm": true
  }
}
